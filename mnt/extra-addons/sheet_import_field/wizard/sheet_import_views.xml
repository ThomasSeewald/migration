<?xml version="1.0"?>
<odoo>

    <record id="view_ir_model_import_wizard" model="ir.ui.view">
        <field name="name">ir.model.import.wizard.form</field>
        <field name="model">ir.model.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Fields From Sheet">
                <group>
                    <group>
                        <field name="file_name" />
                        <field name="is_create_new_field" />
                    </group>
                    <group class="d-block">
                        <div>
                            <style>
                                .o_cell{
                                    width:100% !important;
                                }
                                th{
                                    padding:10px;
                                }
                                td{
                                    padding:10px;
                                }
                                .font-weight-bold{
                                    font-weight: bold;
                                }
                            </style>
                            <h1>Guidelines</h1>
                            <table class="table">
                                <tr>
                                    <th>name</th>
                                    <th>city</th>
                                    <th class="text-danger">area</th>
                                    <th class="text-danger">landline</th>
                                </tr>
                                <tr>
                                    <th>dummy row</th>
                                    <th>dummy string</th>
                                    <td class="text-danger">any string</td>
                                    <td class="text-danger">0123456789</td>
                                </tr>
                                <tr>
                                    <th>Jon</th>
                                    <th>YourCity</th>
                                    <td class="text-danger">SG</td>
                                    <td class="text-danger">0123456789</td>
                                </tr>
                            </table>
                            <p>
                                <ul>
                                    <li>Rename your sheet to Model Name.</li>
                                    <li>First Row will be considered as <span class="font-weight-bold">Column Name</span>.</li>
                                    <li>Second Row will be considered as <span class="font-weight-bold">Dummy Row</span> to detect datatypes of <span class='text-danger text-nowrapfont-weight-bold'>New Fields</span>.
                                    <br />(Supported datatypes Boolean, Char, Text, Integer, Float, Date, Datetime)</li>
                                    <li>From the Third Row, you can put your <span class="font-weight-bold">actual data</span> respectively.</li>
                                </ul>
                            </p>
                        </div>
                    </group>
                </group>
                <footer>
                    <button name="read_data" string="Import" type="object"
                        class="btn-primary" />
                    <button special="cancel" string="Cancel" type="object"
                        class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
      
    <record id="action_view_ir_model_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Fields From Sheet</field>
        <field name="res_model">ir.model.import.wizard</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem name="Import" id="menu_spreadsheet" sequence="10"/>
    <menuitem name="Settings" id="menu_settings" parent="menu_spreadsheet" sequence="10"/>
    <menuitem name="Import Fields / Data" id="menu_import_field" parent="menu_settings"
    action="action_view_ir_model_import_wizard" sequence="2"/>

</odoo>